{
  "manifest_version": 3,
  "name": "SFF Compatibility Checker",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://pcpartpicker.com/list/*"],
      "js": ["contentScript.js"]
    }
  ]
}
